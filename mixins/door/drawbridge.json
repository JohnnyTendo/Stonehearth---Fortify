	     "placeable_on_walls": true,
         "placeable_on_ground": true
      },
      "sensor_list": {
         "sensors": {
            "door_sensor": {
               "type": "sensor",
               "radius": 5
            }
         }
      },
      "stonehearth:door": {
         "sensor": "door_sensor"
      },
      "region_collision_shape": {
