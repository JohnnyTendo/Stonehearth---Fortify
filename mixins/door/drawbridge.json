            {
				"min": {"x": -1.5, "y": -1, "z": -4},
				"max": {"x": 1.5, "y": 0, "z": 0}
            }
         ]
      }
   },
   "entity_data": {
      "stonehearth:entity_radius": 0.5
   }
}
